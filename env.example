# API Keys - Get your API keys from the provider websites
# Google Gemini: https://makersuite.google.com/app/apikey
# OpenAI: https://platform.openai.com/api-keys
# Anthropic: https://console.anthropic.com/
# DeepSeek: https://platform.deepseek.com/
# Kimi AI Global: https://platform.moonshot.ai/
# Kimi AI China: https://platform.moonshot.cn/

GEMINI_API_KEY=
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
DEEPSEEK_API_KEY=
KIMI_API_KEY=
KIMICN_API_KEY=

# Default AI Provider
# Options: gemini, openai, anthropic, deepseek, kimi, kimicn
DEFAULT_PROVIDER=kimicn

# Server Configuration
PORT=3000
NODE_ENV=development

# API Security
# API_MODE: 'public' (no authentication) or 'private' (requires API key)
API_MODE=public
# SERVER_API_KEY: Your secret API key (generate a strong random key for production)
# Example: SERVER_API_KEY=nlp-qg-1a2b3c4d5e6f7g8h9i0j
SERVER_API_KEY=

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL_DAYS=30
CACHE_MAX_ENTRIES=1000

# Streaming Configuration
STREAMING_ENABLED=true

# Parallel Processing Configuration
PARALLEL_ENABLED=true
PARALLEL_CHUNK_SIZE=10
PARALLEL_MAX_WORKERS=5

# Quality Scoring Configuration
# Note: Scoring uses additional API calls. Disable if not needed.
QUALITY_SCORING_ENABLED=false
QUALITY_MIN_SCORE=6
QUALITY_MAX_RETRIES=2
QUALITY_SCORER_PROVIDER=gemini
QUALITY_QUICK_SCORE=true

# Deduplication Configuration
DEDUP_ENABLED=true
DEDUP_THRESHOLD=85
DEDUP_COMPARE_OPTIONS=true
DEDUP_KEEP_BEST=true

# Difficulty Balancing Configuration
DIFFICULTY_BALANCE_ENABLED=true
DIFFICULTY_BALANCE_TOLERANCE=0.10
DIFFICULTY_BALANCE_MAX_RETRIES=2

# Error Handling & Retry Configuration
ERROR_MAX_RETRIES=3
ERROR_BASE_DELAY=1000
ERROR_MAX_DELAY=30000
ERROR_CIRCUIT_BREAKER_THRESHOLD=5

# Smart Routing Configuration
SMART_ROUTING_ENABLED=true
ROUTING_PRIORITY=balanced

# Job Queue Configuration
QUEUE_ENABLED=true
QUEUE_WORKERS=3

